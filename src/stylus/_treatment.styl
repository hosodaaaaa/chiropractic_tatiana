.treatment-lint-contents
  max-width 1080px
  margin 0 auto
  .treatment-box
    padding 30px 60px
    background-color #fff
    border-radius 20px
    &:not(:first-child)
      margin-top 40px
    h3
      font-size 30px
      font-weight bold
      color $black
      position relative
      &::after
        content: "";
        display block
        width 100%
        height 2px
        border-top 1px solid $black
        margin-top 22px
    p
      font-size 18px
      color $black
      line-height 1.6
      margin-top 20px
      letter-spacing .014em

.price-contents
  max-width 842px
  margin 0 auto
  padding-top 120px
  h2
    font-size 30px
    color $black
    letter-spacing .2em
    text-align center
  .price-wrapper
    margin-top 40px
    display flex
    align-items center
    justify-content space-between
    .price-table
      width 48%
  .confirm
    &:first-child
      margin-top 18px
    font-size 22px
    color $black
    letter-spacing .02em
    margin-top 8px