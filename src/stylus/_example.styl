.title-contents.example
  width 100%
  height 400px
  background-image url('../image/medical-563427_1920.jpg')
  background-position center
  background-size cover
  position relative
  h2
    font-size 50px
    color #fff
    letter-spacing .14em
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.example-contents
  margin 0 auto
  max-width 1080px
  .example-block
    padding 30px 60px 60px
    background-color #fff
    border-radius 20px
    &:not(:first-child)
      margin-top 60px
    h3
      font-size 30px
      color $black
      letter-spacing .14em
      position relative
      &::after
        content ""
        position absolute
        display block
        width 100%
        height 2px
        border-top 1px solid $black
        margin-top 24px
      span
        font-size 14px
        font-weight normal
        letter-spacing .014em
        margin-left 12px
    .img-box
      margin 60px auto 0
      width 32%
    .text-block
      margin-top 24px
      &:not(:first-child)
        margin-top 34px
      h4
        font-size 18px
        letter-spacing .14em
        color $black
      p
        font-size 16px
        letter-spacing .14em
        color $black
        margin-top 14px

@media screen and (max-width 767px)

  .title-contents.example
    height 200px
    h2
      font-size 26px

  .example-contents
    max-width 100%
    .example-block
      padding 30px 25px 60px
      margin 0 4%
      h3
        font-size 26px
        span
          margin-left: 0
          margin-top: 8px
          display: block
          font-size: 12px
      .img-box
        width 100%
