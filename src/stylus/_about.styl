section
  &:not(:first-child)
    padding-top 120px
  > h3
    font-size 30px
    font-weight bold
    color $black
    text-align center

.title-contents
  width 100%
  height 400px
  background-size cover
  position relative
  &::after
    content: ""
    width 100%
    height 100%
    display block
    background-color rgba(0,0,0,.3)

.title-contents.about
  background-image url('../image/about-bg.jpg')
  background-position 100% 65%
  h2
    font-size 50px
    color #fff
    letter-spacing .14em
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.consultation-room-contents
  max-width 972px
  margin 0 auto
  .consultation-room-wrapper
    display flex
    flex-direction row
    align-items flex-start
    justify-content space-between
    margin-top 40px
    width 100%
    .img-box
      width 41%
      img
        border-radius 8px
    p
      width 51%
      font-size 18px
      color $black
      line-height 1.8

.doctor-contents
  max-width 920px
  margin 0 auto
  .doctor-wrapper
    display flex
    flex-direction row
    align-items flex-start
    justify-content space-between
    margin-top 40px
    .img-box
      width 38%
      img
        border-radius 50%
    .profile-area
      width: 54%;
      color $black
      h3
        font-size 20px
        font-weight normal
      h2
        margin 5px 0 0
        font-size 24px
        font-weight normal
        span
          display block
          margin-top 8px
          font-size 18px
          letter-spacing .04em
      .history
        margin 30px 0 20px
        font-size 18px
        line-height 1.6
      .profile
        font-size 16px
        line-height 2

.schedule-contents
  max-width 823px
  margin 0 auto
  .concept
    text-align center
    font-size 18px
    color $black
    margin 40px 0 40px
    line-height 2
    letter-spacing .04em
  .confirm
    margin-top 12px
    color $black
    font-size 18px
    span
      font-weight bold
      border-bottom 1px solid #000
    &:nth-child(4)
      margin-top 18px

.access-contents
  max-width 1080px
  margin 0 auto

@media screen and (max-width 767px)
  section
    &:not(:first-child)
      padding 40px 0
    > h3
      font-size 26px

  .title-contents.about
    height 200px
    h2
      font-size 26px

  .consultation-room-contents
    width 100%
    margin 0
    .consultation-room-wrapper
      display block
      .img-box
        width 90%
        margin 0 auto
      p
        width 90%
        font-size 16px
        margin 20px auto 0

  .doctor-contents
    .doctor-wrapper
      display block
      .img-box
        width: 60%;
        margin 0 auto
      .profile-area
        width 90%
        margin 20px auto 0
        h3
          font-size 18px
        h2
          font-size 20px
          span
            font-size 16px
        .history
          font-size: 16px;
        .profile
          font-size 14px

  .schedule-contents
    max-width 100%
    margin 0 4%
    .concept
      font-size 14px
    .schedule-box
      overflow-x scroll
      .img-box
        width 700px
        height auto
    .confirm
      font-size 14px

  .access-wrapper
    margin: 60px 4% 0;