section
  &:not(:first-child)
    padding-top 120px
  > h3
    font-size 30px
    font-weight bold
    color $black
    text-align center

.title-contents
  width 100%
  height 400px
  background-image url('../image/bg_2.png')
  background-position center
  background-size cover
  position relative
  h2
    font-size 50px
    color #fff
    letter-spacing .14em
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.consultation-room-contents
  max-width 972px
  margin 0 auto
  .consultation-room-wrapper
    display flex
    flex-direction row
    align-items flex-start
    justify-content space-between
    margin-top 40px
    width 100%
    .img-box
      width 41%
      img
        border-radius 8px
    p
      width 51%
      font-size 18px
      color $black
      line-height 1.8

.doctor-contents
  max-width 920px
  margin 0 auto
  .doctor-wrapper
    display flex
    flex-direction row
    align-items flex-start
    justify-content space-between
    margin-top 40px
    .img-box
      width 38%
      img
        border-radius 50%
    .profile-area
      width: 54%;
      color $black
      h3
        font-size 20px
        font-weight normal
      h2
        margin 5px 0 0
        font-size 24px
        font-weight normal
        span
          display block
          margin-top 8px
          font-size 18px
          letter-spacing .04em
      .history
        margin 30px 0 20px
        font-size 18px
        line-height 1.6
      .profile
        font-size 16px
        line-height 2

.schedule-contents
  max-width 823px
  margin 0 auto
  .concept
    text-align center
    font-size 18px
    color $black
    margin 40px 0 40px
    line-height 2
    letter-spacing .04em
  .confirm
    margin-top 12px
    color $black
    font-size 18px
    span
      font-weight bold
      border-bottom 1px solid #000
    &:nth-child(4)
      margin-top 18px

.access-contents
  max-width 1080px
  margin 0 auto