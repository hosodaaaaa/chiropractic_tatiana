@charset "UTF-8"

html,
body,
h1,
h2,
h3,
h4,
section,
div,
span,
ul,
li,
a,
img,
p
  margin 0
  padding 0

body
  font-family $notoSans
  background-color $beige

li
  list-style none

img
  max-width 100%
  height auto

a
  text-decoration none

header
  width 100%
  height 90px
  display flex
  align-items center
  justify-content: space-between;
  max-width: 1160px;
  position fixed
  top 0
  left 50%
  transform translateX(-50%)
  z-index 999
  a
    display block
    color $black
    font-weight bold
    font-size 18px
  ul
    display flex
    align-items center
    li
      &:nth-child(2)
        margin 0 26px

.more-link
  display block
  width 250px
  padding 18px 0
  border-radius 8px
  text-align center
  border 2px solid #fff
  background-color #fff
  transition .2s
  &:hover
    background-color $deepBeige
    span
      font-weight bold
  span
    font-size 20px
    color $black
    letter-spacing .04em

.contact-contents
  padding-top 120px
  text-align center
  h3
    color $black
    font-size 30px
    letter-spacing .2em
  a
    display inline-block
    margin-top 30px
    font-size 60px
    color $black
    letter-spacing .04em

.copyright
  padding 260px 0 15px
  color $black
  font-size 12px
  text-align center