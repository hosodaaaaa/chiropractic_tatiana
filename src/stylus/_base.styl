@charset "UTF-8"

html,
body,
h1,
h2,
h3,
h4,
section,
div,
span,
ul,
li,
a,
img,
p
  margin 0
  padding 0

body
  font-family $notoSans
  background $beige

main
  &:not(.home)
    background-color $beige

li
  list-style none

img
  max-width 100%
  height auto

a
  text-decoration none

.is-pc
  display block
.is-sp
  display none
@media screen and (max-width 767px)
  .is-pc
    display none
  .is-sp
    display block

header
  width 100%
  height 140px
  display flex
  align-items center
  justify-content: space-between;
  position fixed
  top 0
  left 50%
  transform translateX(-50%)
  z-index 999
  a
    display block
    color $black
    font-weight bold
    font-size 18px
  h1
    margin-left 60px
    a
      width 100px
  ul
    display flex
    align-items center
    margin-right 60px
    li
      &:nth-child(2)
        margin 0 26px

.more-link
  display block
  width 250px
  padding 18px 0
  border-radius 8px
  text-align center
  border 2px solid #fff
  background-color #fff
  span
    font-size 20px
    color $black
    letter-spacing .04em

.contact-contents
  padding-top 120px
  text-align center
  h3
    color $black
    font-size 30px
    letter-spacing .2em
  a
    display inline-block
    margin-top 30px
    font-size 60px
    color $black
    letter-spacing .04em

.copyright
  padding 260px 0 15px
  color $black
  font-size 12px
  text-align center

@media screen and (min-width 768px)
  a[href^="tel:"]
    pointer-events none

  .more-link
    transition .2s
    &:hover
      background-color $deepBeige
      span
        font-weight bold

@media screen and (max-width 767px)
  header
    height 90px
    align-items center
    justify-content: center;
    max-width: 100%;
    position fixed
    h1
      margin-right 18px
      margin-left 0
      a
        width 60px
    ul
      margin-right 0
      li
        &:nth-child(2)
          margin 0 20px

  .more-link
    background-color $deepBeige
    span
      font-weight bold

  .contact-contents
    padding 80px 10% 0
    h3
      font-size 26px
    a
      margin-top 14px
      font-size 28px

  .copyright
    padding 160px 0 15px